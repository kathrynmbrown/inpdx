<div class="row">
  <div class="large-6 columns">
    <h1>Create a profile</h1>

      <%= form_for @profile do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :website_link %>
      <%= f.text_field :website_link %>
      <%= f.label :twitter_handle %>
      <%= f.text_field :twitter_handle %>
      <%= f.label :headline %>
      <%= f.text_field :headline %>
      <%= f.file_field :avatar %>
      <%= f.file_field :background %>
      <%= f.hidden_field :user_id, :value => current_user.id  %>
      <%= f.submit "Create profile", class: "button" %>
    <% end %>
  </div>
</div>
