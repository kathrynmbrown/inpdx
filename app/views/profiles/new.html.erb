<h1>Create a profile</h1>

  <%= form_for @profile do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :website_link %>
  <%= f.text_field :website_link %>
  <%= f.label :twitter_handle %>
  <%= f.text_field :twitter_handle %>
  <%= f.label :headline %>
  <%= f.text_field :headline %>
  <%= f.label :organization %>
  <%= f.collection_select :organization_ids, Organization.order(:name), :id, :name, {}, {multiple:true} %>
  <%= f.hidden_field :user_id, :value => current_user.id  %>
  <%= f.submit "Create profile", class: "button" %>
<% end %>
