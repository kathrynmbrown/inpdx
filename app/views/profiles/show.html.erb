<ul class="breadcrumbs">
  <li><a href="#">Home</a></li>
  <li class="unavailable"><a href="#">Tag Search</a></li>
  <li class="unavailable"><a href="#">All Results</a></li>
  <li class="current"><a href="#"><%= @profile.name %></a></li>
</ul>
<section id="page-hero">
  <div class="row">
    <div class="small-12 large-4 columns">
        <%= image_tag @profile.avatar.url(:thumb) %>
    </div>
    <div class="small-12 large-8 columns">
      <h1><%= @profile.name %></h1>
      <h4><%= @profile.headline %></h4>
      <h5>Twitter: <%= @profile.twitter_handle %></h5>
    </div>
  </div>
</section>
<section id="page-body">
  <div class="row">
  <div class="small-12 large-4 columns">
        <dl class="accordion" data-accordion>
          <dd>
            <a href="#panel1">My Events</a>
            <div id="panel1" class="content">
              <% @profile.events.each do |event| %>
                <li><%= event.name %></li>
              <% end %>
            </div>
          </dd>
          <dd>
            <a href="#panel2">My Favorite Companies</a>
            <div id="panel2" class="content">
              All my companies!
            </div>
          </dd>
          <dd>
            <a href="#panel3">My Favorite Products</a>
            <div id="panel3" class="content">
              Add favorite products soon.
            </div>
          </dd>
          <dd>
            <a href="#panel2">My Favorite Restaurants</a>
            <div id="panel2" class="content">
              All my restaurants!
            </div>
          </dd>
        </dl>
    </div>
    <div class="small-12 large-8 columns">
      <div class="panel">
        <p>My recent reviews</p>
        <% @profile.reviews.each do |review| %>
            <table>
                <tbody>
                  <tr>
                    <td>
                      <h5><strong><%= review.title %></strong></h5><br>
                      <p>Rating (out of 5): <%= show_stars review %></p>
                      <p><%= review.content %></p>
                    </td>
                  </tr>
                </tbody>
              </table>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 large-4 columns">

    </div>
    <div class="small-12 large-6 columns">

    </div>
    <div class="small-12 large-3 columns">
    </div>
  </div>
</section>
