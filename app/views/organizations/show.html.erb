<ul class="breadcrumbs">
  <li><a href="#">Home</a></li>
  <li class="unavailable"><a href="#">Tag Search</a></li>
  <li class="unavailable"><a href="#">All Results</a></li>
  <li class="current"><a href="#"><%= @organization.name %></a></li>
</ul>
<section id="page-hero">
  <div class="row">
    <div class="small-6 large-3 columns">
      <%= image_tag @organization.avatar.url(:medium) %>
    </div>
    <div class="large-6 columns">
      <h3><%= @organization.name %></h3>
      <p><%= @organization.description %></p>
    </div>
    <div class="large-3 columns">
    </div>
  </div>
</section>
<section id="page-body">
  <div class="row">
    <div class="small-12 large-4 columns">
      <h5>Contact: <%= @organization.contact %></h5>
      LONGER DESCRIPTION
    </div>
    <div class="small-12 large-5 columns">
      <ul>
        <% @organization.events.each do |event| %>
          <li><%= event.name %></li>
          <li>Date: <%= event.event_date.strftime("%A %B %d, %Y") %></li>
          <li>Start Time: <%= event.start_time.strftime("%I:%M %P") %></li>
          <li>End Time: <%= event.end_time.strftime("%I:%M %P") %></li>
          <%= link_to "See event details", event_path(event) %>
        <% end %>
      </ul>
    </div>
    <div class="small-12 large-3 columns">
      MEMBERS LIST
      <% @organization.profiles.each do |profile| %>
        <li><%= profile.name %></li>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 large-4 columns">
    </div>
    <div class="small-12 large-6 columns">

    </div>
    <div class="small-12 large-3 columns">
    </div>
  </div>
</section>
