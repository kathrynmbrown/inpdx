<ul class="breadcrumbs">
  <li><a href="#">Home</a></li>
  <li class="unavailable"><a href="#">Tag Search</a></li>
  <li class="unavailable"><a href="#">All Results</a></li>
  <li class="current"><a href="#"><%= @event.name %></a></li>
</ul>
<section id="page-hero">
  <div class="row">
    <div class="small-6 large-3 columns">
      <%= image_tag("leader.jpg") %>
    </div>
    <div class="large-6 columns">
      <h3><%= @event.name %></h3>
      <p><%= @event.description %></p>
    </div>
    <div class="large-3 columns">
    </div>
  </div>  
</section>
<section id="page-body">
  <div class="row">
    <div class="small-12 large-4 columns">
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %>
      <h5>Address: <%= @event.address %></h5>
    </div>
    <div class="small-12 large-5 columns">  
      <p><%= @event.long_description %></p>
    </div>  
    <div class="small-12 large-3 columns"> 
      <h5>Date: <%= @event.event_date.strftime("%A %B %d, %Y") %></h5>
      <h5>Start Time: <%= @event.start_time.strftime("%I:%M %P") %></h5>
      <h5>End Time: <%= @event.end_time.strftime("%I:%M %P") %></h5>
      <h5>ADD EVENT TO CALENDAR BUTTON</h5>
      <h3>Who's going</h3> 
      <p>ADD PEOPLE GOING TO EVENT HERE</p>
    </div> 
  </div> 
  <div class="row">
    <div class="small-12 large-4 columns">
      <h3>Events nearby</h3>
      <ul>
      <% for event in @event.nearbys(10) %>
        <li><%= link_to event.address, event %> (<%= event.distance.round(2) %> miles)</li>
      <% end %>
      </ul>
    </div>
    <div class="small-12 large-6 columns">  

    </div>
    <div class="small-12 large-3 columns">
    </div> 
  </div> 
</section>
