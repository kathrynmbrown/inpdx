<ul class="breadcrumbs">
  <li><a href="#">Home</a></li>
  <li class="unavailable"><a href="#">Tag Search</a></li>
  <li class="unavailable"><a href="#">All Results</a></li>
  <li class="current"><a href="#"><%= @event.name %></a></li>
</ul>
<section id="page-hero">
  <div class="row">
    <div class="small-12 large-4 columns">
      <%= image_tag @event.avatar.url(:thumb) %>
    </div>
    <div class="small-12 large-8 columns">
      <h1><%= @event.name %></h1>
      <h4><%= @event.description %></h4>
    </div>
  </div>
</section>
<section id="page-body">
  <div class="row">
    <div class="small-12 large-4 columns">
      <h3>Location</h3>
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.company.latitude}%2C#{@event.company.longitude}" %>
      <h5><%= @event.company.name %></h5>
      <h5>Address: <%= @event.company.address %></h5>
    </div>
    <div class="small-12 large-5 columns">
      <p><%= @event.long_description %></p>
    </div>
    <div class="small-12 large-3 columns">
      <div class="sidebar-info">
        <h5>Hosted by: <%= @event.organization.name %></h5>
        <h5>Date: <%= @event.event_date.strftime("%A %B %d, %Y") %></h5>
        <h5>Start Time: <%= @event.start_time.strftime("%I:%M %P") %></h5>
        <h5>End Time: <%= @event.end_time.strftime("%I:%M %P") %></h5>
        <p>Want to join us? RSVP below.</p>
        <%= form_for @rsvp do |f| %>
            <%= f.label "How many people?" %>
            <%= f.text_field :guests %>
            <%= f.hidden_field :event_id, value: @event.id %>
            <%= f.hidden_field :profile_id, value: @current_profile %>
            <%= f.submit "RSVP", class: "button" %>
          <% end %>
        <h3>Who's going</h3>
        <ul class="small-block-grid-3">
          <% @event.profiles.each do |profile| %>
            <li>
              <%= profile.name %><br>
              <%= image_tag profile.avatar.url(:medium) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
