<h1>RSVP to this event</h1>

  <%= form_for @rsvp do |f| %>
  <%= f.label :event_ids, "Events" %><br/>
  <%= f.collection_select :event_ids, Event.order(:name), :id, :name, {}, {multiple:true} %>
  <%= f.hidden_field :profile_id, :value => current_user.id  %>
  <%= f.submit "RSVP now", class: "button" %>
<% end %>
